{
  "name": "brainf__k",
  "version": "1.0.0",
  "description": "brainf**k interpreter by yukikurage",
  "main": "index.js",
  "scripts": {
    "test:spago": "npx spago test",
    "test": "run-s test:*",
    "bundle:spago": "npx spago build --purs-args",
    "bundle:esbuild": "npx esbuild entry.js --bundle --outfile=./public/index.js --minify",
    "bundle:tailwind": "npx tailwindcss -i ./tailwind.css -o ./public/style.css",
    "bundle": "run-s bundle:spago bundle:esbuild bundle:tailwind",
    "watch:esbuild": "npx esbuild entry.js --bundle --outfile=./public/index.js --watch",
    "watch:tailwind": "npx tailwindcss -i ./tailwind.css -o ./public/style.css -w",
    "watch:live-server": "cd public && npx live-server --port=8080",
    "watch": "run-p watch:*"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/jit": "^0.1.18",
    "esbuild": "^0.14.27",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "purescript": "^0.14.7",
    "spago": "^0.20.7",
    "tailwindcss": "^3.0.23"
  }
}
